<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>System.Text.Json serialization plugin for HeroMessaging. Provides JSON message serialization with high performance and .NET integration.</Description>
    <PackageTags>messaging;serialization;json;system-text-json</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\HeroMessaging.Abstractions\HeroMessaging.Abstractions.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
    <Using Include="System" />
    <Using Include="System.Collections.Generic" />
    <Using Include="System.Linq" />
    <Using Include="System.Threading" />
    <Using Include="System.Threading.Tasks" />
    <Using Include="System.Collections.Concurrent" />
    <Using Include="System.Text" />
    <Using Include="System.IO" />
  </ItemGroup>

  <ItemGroup>
    <!-- Exclude JsonSpanSerializer - requires C# 13 ref struct interfaces not yet available -->
    <Compile Remove="JsonSpanSerializer.cs" />
    <None Include="JsonSpanSerializer.cs" />
  </ItemGroup>

</Project>
